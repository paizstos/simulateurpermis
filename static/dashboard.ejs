<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('partials/head.ejs'); %>
    <title>Tableau de Bord</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <%- include('partials/header.ejs', {login: logine, date: year}); %>
    </header>

    <main>
        <h1>Tableau de Bord</h1>
        <h2>Bienvenue, <%= logine %></h2>

        <section>
            <h3>Simulateur</h3>
            <a class="commencertest" href="/test">Commencer le Test</a>
        </section></br>

        <section>
            <h3>Rapports des Anciens Tests</h3>
            <ul>
                <% scores.forEach(function(score, index) { %>
                    <li>Test du <%= score.date %> : <%= score.result %> points</li>
                <% }); %>
            </ul>
        </section></br>

        <section>
            <h3>Personnalisation de la Durée du Test</h3>
            <form action="/set-timer" method="post">
                <label for="timeLimit">Durée (en minutes) :</label>
                <input type="number" name="timeLimit" min="1" max="120" value="<%= timeLimit %>">
                <button type="submit">Mettre à Jour</button>
            </form>
        </section>

        
    </main>

    <footer>
        <p>&copy; <%= year %> Mon site</p>
    </footer>
</body>
</html>
